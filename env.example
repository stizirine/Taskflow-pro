# ===========================================
# DATABASE (Neon Serverless Postgres)
# ===========================================
# Neon: https://console.neon.tech → your project → Connection details
# - Pooled (for app / Prisma Client): use as DATABASE_URL
# - Direct (for migrations / Prisma Migrate): use as DIRECT_URL
DATABASE_URL="postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# ===========================================
# NEXTAUTH
# ===========================================
AUTH_SECRET="generate-a-secure-secret-min-32-chars"
AUTH_URL="https://your-domain.vercel.app"
AUTH_TRUST_HOST=true

# ===========================================
# OAUTH PROVIDERS
# ===========================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===========================================
# APP CONFIG
# ===========================================
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_SERVICE_MODE="api"

# ===========================================
# OPTIONAL - MONITORING
# ===========================================
SENTRY_DSN=""